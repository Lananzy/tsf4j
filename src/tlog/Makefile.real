include ../../tsf4g.mk

LIB_CFILE=$(wildcard *.c)
LIB_OBJ=$(LIB_CFILE:.c=.o)
LIB_LIB=$(TSF4G_LIB)/libtlog.a
LIB_SO=$(TSF4G_LIB)/libtlog.so

TLOG_DEP_LIBS = $(TSF4G_LIB)/libpal.a

.PHONY: all clean

all: $(LIB_LIB) $(LIB_SO)
	cp $(LIB_OBJ)  $(TSF4G_PACKLIBDIR)

-include $(LIB_CFILE:.c=.d)

%.d: %.c
	$(CC) -MM $(CFLAGS) $< -o $@

%.o: %.c %.d
	$(CC) -c $(CFLAGS)  $<

$(LIB_LIB):	$(LIB_OBJ)
	ar r $(LIB_LIB) $^
	

$(LIB_SO): $(LIB_OBJ)
	$(CC) -o $(LIB_SO) $(SHARED) $(CFLAGS)  $^ $(LDPATH) $(TLOG_DEP_LIBS)

clean:
	$(RM) *.o  *.d
	$(RM) $(LIB_LIB)
	$(RM) $(LIB_SO)

